<div class="psStyle"><h3>Patient Information - <abbr title="Veterans Health Information Systems &amp; Technology Architecture">VistA</abbr> Surgery</h3></div>

<!-- This is for the results that come back from this modal -->
<div id="piContent">

</div>

<div id="myModal" class="modal fade" role="dialog">

  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">

      <div class="login-form-container">
        <div class="login-container">

          <div class="modal-header">
            <h1 class="logo text-center" aria-hidden="true">
              <abbr title="Veterans Health Information Systems &amp; Technology Architecture">VistA</abbr> Surgery
            </h1>
          </div>

          <div class="modal-body login-container-body">
            <p class="sr-only">Enter any one field and Press Enter</p>
            <div id="login-form-region">

              <!-- <form action="#" method="post" class="text-left adk-form form-container"> -->
              <p class="sr-only">* indicates a required field. Tab to enter form.</p>

              <div>
                <p id="errorMessage" class="text-danger text-center bottom-padding-xs" aria-live="assertive"></p>
              </div>

              <div id="PatientIdDiv" class="control form-group input-control PatientId">
                <label for="PatientId">PatientId </label>
                <input type="text"
                       autocomplete="off" class="form-control" id="PatientId" name="PatientId"
                       maxlength="255" title="Enter Patient ID" required="" />
              </div>

              <div id="PatientSSNDiv" class="control form-group input-control PatientSSN">
                <label for="PatientSSN">PatientSSN </label>
                <input type="text"
                       autocomplete="off" class="form-control" id="PatientSSN" name="PatientSSN"
                       maxlength="255" title="Enter Patient SSN" required="" />
              </div>

              <div id="PatientLast5Div" class="control form-group input-control PatientLast5">
                <label for="PatientLast5">PatientLast5 </label>
                <input type="text"
                       autocomplete="off" class="form-control" id="PatientLast5" name="PatientLast5"
                       maxlength="255" title="Enter Patient Last 5 digits of SSN" required="" />
              </div>

              <div class="control inline-display button-control login">
                <button id="selectPatientButton" type="submit" class="btn btn-default signin-button btn btn-primary btn-block"
                        xxxdata-dismiss="modal" title="Press enter to view Patient Details">Press enter to view Patient Details</button>
              </div>

              <div>
                <div class="hidden" id="screenReaderAuthenticating">
                  Authenticating
                </div>
              </div>
              <!-- </form> -->

            </div>
          </div>
        </div>

        <div class="modal-footer login-container-footer">
          <div class="all-padding-sm top-padding-no text-center">
            <a id="linkHelp-logon" class="help-icon-link" href=
              "http://vaww.oed.portal.va.gov/pm/iehr/vista_evolution/eHMP/Help_Wiki/Wiki%20Page%20Library/Accessing%20the%20eHMP%20Application.aspx"
               target="helpIconUniqueWindow" title=
                 "Press enter to access the help content. You will be redirected to a new browser window.">
              Need Help Logging In?
            </a>
          </div>
          <div>
            <p class="text-center">VistA Surgery GUI 1.0.0</p>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div id="spinner" class="spinner" style="display:none;">
  <img id="img-spinner" src="../../../images/spinner-blue.gif" alt="Loading"/>
</div>
