            <div class="control form-group input-control accessCode">
              <label for="accessCode">Access code *</label>
              <input type="password"
              autocomplete="off" class="form-control" id="accessCode" name="accessCode"
              maxlength="255" title="Enter in access code" required="" />
            </div>

            <div class="control form-group input-control verifyCode">
              <label for="verifyCode">Verify code *</label>
              <input type="password"
              autocomplete="off" class="form-control" id="verifyCode" name="verifyCode"
              maxlength="255" title="Enter in verify code" required="" />
            </div>

            <div class="control inline-display button-control login">
              <button type="submit" class="btn btn-default signin-button btn btn-primary btn-block" data-dismiss="modal"
              title="Press enter to sign in">Sign In</button>
            </div>

            <div>
              <div class="hidden" id="screenReaderAuthenticating">
                Authenticating
              </div>
            </div>
