      <div class="modal-body login-container-body">
        <p class="sr-only">All fields are required</p>
        <div id="login-form-region">
          <form action="#" method="post" class="text-left adk-form form-container">
            <p class="sr-only">* indicates a required field. Tab to enter form.</p>

            <div>
              <p id="errorMessage" class="text-danger text-center bottom-padding-xs" aria-live="assertive"></p>
            </div>

            <div>
              <div>
                <p id="facilityListLoadingMessage" class="hidden">Loading facilities...</p>
              </div>

              <div class="control form-group select-control selectedFacility" role="combobox">
                <label for="selectedFacility">Facility *</label>
                <select
                class="form-control select2-hidden-accessible"
                id="selectedFacility"
                name="selectedFacility"
                title="Facility edit. Press enter to activate"
                required=""
                size="1" tabindex="-1" aria-hidden="true">





{{#each facilities}}<option value={{_id}}>{{facilityName}}</option>{{/each}}








